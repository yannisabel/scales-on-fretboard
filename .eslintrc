{
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6":     true,
        "browser": true,
        "node":    true,
        "mocha":   true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
      "indent": ["error", 4],
      "object-curly-spacing": ["error", "always"],
      "no-extra-parens": "error",
      "no-multi-spaces": "error"
    },
    "settings": {
      "react": {
        "version": "16.5"
      }
    },
    "globals": {
        "Form": false,
        "$": false,
        "jQuery": false,
        "Prism": false,
        "sticky": false
    }
}
